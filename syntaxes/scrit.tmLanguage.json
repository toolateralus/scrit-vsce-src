{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "scrit",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		}
	],
	"repository": {
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.scrit",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b\\s*(?=\\()",
					"captures": {
						"0": {
							"name": "punctuation.definition.function.scrit",
							"match": "\\("
						},
						"1": {
							"name": "meta.function-call.arguments.scrit",
							"match": "[^\\)]*"
						},
						"2": {
							"name": "punctuation.definition.function.scrit",
							"match": "\\)"
						}
					}
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.scrit",
					"match": "\\b(true|false|undefined|null)\\b"
				}
			]
		},
		"comments": {
			"name": "comment.line.scrit",
			"begin": "//",
			"end": "$"
		},
		"strings": {
			"name": "string.quoted.scrit",
			"begin": "(\"|')",
			"end": "(\"|')",
			"patterns": [
				{
					"name": "constant.character.escape.scrit",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.scrit",
					"match": "\\=|\\+=|\\-=|\\/=|\\*=|\\?\\?\\="
				},
				{
					"name": "keyword.operator.arithmetic.scrit",
					"match": "\\+|-|\\*|/|\\^"
				},
				{
					"name": "keyword.operator.comparison.scrit",
					"match": "<|>|<=|>="
				},
				{
					"name": "keyword.operator.logical.scrit",
					"match": "\\||&|!"
				},
				{
					"name": "punctuation.separator.scrit",
					"match": ",|\\|"
				},
				{
					"name": "punctuation.bracket.scrit",
					"match": "\\(|\\)|\\{|\\}|\\[|\\]"
				},
				{
					"name": "punctuation.accessor.scrit",
					"match": "\\."
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.flow.scrit",
					"match": "\\b(for|if|else|continue|break|return)\\b"
				},
				{
					"name": "keyword.control.declaration.scrit",
					"match": "\\b(import|from|use|func)\\b"
				},
				{
					"name": "keyword.control.type.scrit",
					"match": "\\b(typeof)\\b"
				},
				{
					"name": "variable.language.this.scrit",
					"match": "\\bthis\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.scrit",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "constant.numeric.float.scrit",
					"match": "\\b[0-9]+\\.[0-9]*[fF]?"
			}
			]
		}
	},
	"scopeName": "source.scrit"
}